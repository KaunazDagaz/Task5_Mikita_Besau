<div class="fixed-top bg-white p-3 shadow-sm">
    <div class="d-flex align-items-center gap-2">
        <input type="number" id="seed-input" class="form-control w-auto" placeholder="Enter a seed value" />
        <label for="avg-likes-slider" class="form-label mb-0">Average Likes:</label>
        <input type="range" id="avg-likes-slider" class="form-range w-auto" min="0" max="100" step="0.1" value="50" />
        <span id="avg-likes-value" class="fw-bold">50</span>
        <label for="avg-reviews-slider" class="form-label mb-0">Average Reviews:</label>
        <input type="range" id="avg-reviews-slider" class="form-range w-auto" min="0" max="10" step="0.1" value="5" />
        <span id="avg-reviews-value" class="fw-bold">5</span>
        <button id="load-books-button" class="btn btn-primary">Load Books</button>
    </div>
</div>

<script src="~/js/updateDisplayedLikes.js"></script>
<script src="~/js/updateDisplayedReviews.js"></script>