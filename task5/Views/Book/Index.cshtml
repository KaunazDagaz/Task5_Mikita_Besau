@model IEnumerable<task5.Models.BookViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Books";
}

@await Html.PartialAsync("_Menu")

<div class="container mt-4">
    <div class="row justify-content-center">
        <div id="error-message" class="alert text-center fixed-height-alert" style="color: red" role="alert"></div>
    </div>
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">@Localizer["Books"]</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-secondary text-white">
                        <tr>
                            <th class="text-center" style="width: 5%">#</th>
                            <th style="width: 15%">@Localizer["ISBN"]</th>
                            <th style="width: 35%">@Localizer["Title"]</th>
                            <th style="width: 25%">@Localizer["Author"]</th>
                            <th style="width: 20%">@Localizer["Publisher"]</th>
                        </tr>
                    </thead>
                    <tbody id="book-list"></tbody>
                </table>
            </div>

            <div class="d-md-none" id="mobile-book-list"></div>
        </div>
    </div>
    <div id="loading" class="text-center mt-3 d-none">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">@Localizer["Loading"]</p>
    </div>
</div>

<script src="~/js/utils.js"></script>
<script src="~/js/processError.js"></script>
<script src="~/js/books.js"></script>
<script src="~/js/initialize.js"></script>